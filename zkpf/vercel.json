{
  "version": 2,
  "framework": "vite",
  "installCommand": "cd web && npm install",
  "buildCommand": "cd web && npm run build",
  "outputDirectory": "web/dist",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        },
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "credentialless"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Cross-Origin-Resource-Policy",
          "value": "cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/zkpf/params", "destination": "/api/zkpf/params" },
    { "source": "/zkpf/epoch", "destination": "/api/zkpf/epoch" },
    { "source": "/zkpf/policies", "destination": "/api/zkpf/policies" },
    { "source": "/zkpf/verify", "destination": "/api/zkpf/verify" },
    { "source": "/zkpf/verify-bundle", "destination": "/api/zkpf/verify-bundle" },
    { "source": "/zkpf/attest", "destination": "/api/zkpf/attest" },
    { "source": "/lightwalletd/:path*", "destination": "/api/lightwalletd" },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}


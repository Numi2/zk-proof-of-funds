{
  "version": 2,
  "framework": "vite",
  "installCommand": "cd web && npm install",
  "buildCommand": "cd web && npm run build",
  "outputDirectory": "web/dist",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        },
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "credentialless"
        }
      ]
    },
    {
      "source": "/assets/(.*\\.js)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Cross-Origin-Resource-Policy",
          "value": "cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/zkpf/params", "destination": "https://zkpf-backend.fly.dev/zkpf/params" },
    { "source": "/zkpf/epoch", "destination": "https://zkpf-backend.fly.dev/zkpf/epoch" },
    { "source": "/zkpf/artifacts/:path*", "destination": "https://zkpf-backend.fly.dev/zkpf/artifacts/:path*" },
    { "source": "/zkpf/policies", "destination": "https://zkpf-backend.fly.dev/zkpf/policies" },
    { "source": "/zkpf/verify", "destination": "https://zkpf-backend.fly.dev/zkpf/verify" },
    { "source": "/zkpf/verify-bundle", "destination": "https://zkpf-backend.fly.dev/zkpf/verify-bundle" },
    { "source": "/zkpf/attest", "destination": "https://zkpf-backend.fly.dev/zkpf/attest" },
    { "source": "/zkpf/pcd/:path*", "destination": "https://zkpf-backend.fly.dev/zkpf/pcd/:path*" },
    { "source": "/zkpf/verify/wallet-state-transition", "destination": "https://zkpf-backend.fly.dev/zkpf/verify/wallet-state-transition" },
    { "source": "/lightwalletd/:path*", "destination": "/api/lightwalletd" },
    { "source": "/api/personhood/:path*", "destination": "https://zkpf-backend.fly.dev/api/personhood/:path*" },
    { "source": "/api/rails/omni/:path*", "destination": "https://zkpf-backend.fly.dev/rails/omni/:path*" },
    { "source": "/rails/omni/:path*", "destination": "https://zkpf-backend.fly.dev/rails/omni/:path*" },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

